{
	"bsonType": "object",
	"required": ["character_id", "name", "gender", "personality"],
	"permission": {
		"read": true,
		"create": "auth.permission.admin",
		"update": "auth.permission.admin",
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "记录ID"
		},
		"character_id": {
			"bsonType": "string",
			"description": "角色编号（如F01、M01）"
		},
		"name": {
			"bsonType": "string",
			"description": "角色姓名"
		},
		"gender": {
			"bsonType": "string",
			"enum": ["female", "male"],
			"description": "角色性别"
		},
		"archetype": {
			"bsonType": "string",
			"description": "角色定型（如温柔学姐、高冷女神等）"
		},
		"personality": {
			"bsonType": "string",
			"description": "性格描述"
		},
		"speaking_style": {
			"bsonType": "string",
			"description": "说话风格"
		},
		"hobbies": {
			"bsonType": "array",
			"description": "兴趣爱好列表",
			"items": {
				"bsonType": "string"
			}
		},
		"background": {
			"bsonType": "string",
			"description": "背景故事"
		},
		"difficulty": {
			"bsonType": "int",
			"minimum": 1,
			"maximum": 5,
			"description": "攻略难度（1-5星）"
		},
		"avatar": {
			"bsonType": "string",
			"description": "头像资源路径"
		},
		"greeting": {
			"bsonType": "string",
			"description": "初始问候语"
		},
		"tags": {
			"bsonType": "array",
			"description": "角色标签",
			"items": {
				"bsonType": "string"
			}
		},
		"is_active": {
			"bsonType": "bool",
			"description": "是否启用"
		},
		"created_at": {
			"bsonType": "timestamp",
			"description": "创建时间"
		}
	}
}
